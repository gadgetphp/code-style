{
  "name": "gadgetphp/code-style",
  "type": "library",
  "homepage": "https://github.com/gadgetphp/code-style",
  "license": "MIT",
  "authors": [
    {
      "name": "Melody Kimball",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/gadgetphp/code-style/issues",
    "wiki": "https://github.com/gadgetphp/code-style/wiki",
    "source": "https://github.com/gadgetphp/code-style"
  },
  "require": {
    "php": "^8.1",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "apcu-autoloader": true
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
  }
}
